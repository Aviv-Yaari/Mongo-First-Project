<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link
    href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
    rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/general.css">
  <title>Create New Product</title>
</head>

<body>
  <h1 class="bg-light">Create New Product</h1>

  <form method="POST" action="/products">
    <div class="container d-flex justify-content-center flex-column" style="width: 25%; text-align: start;">
      <section>
        <label for="name">Name: </label>
        <input class="form-control" type="text" name="name" id="name" />
      </section>
      <section>
        <label for="price">Price: </label>
        <input class="form-control" type="number" name="price" id="price" min="0" />
      </section>
      <section>
        <label for="cat">Category: </label>
        <select class="form-control" type="text" name="cat" id="cat">
          <% for (const category of categories) { %>
            <option>
              <%- category %>
            </option>

            <% } %>

        </select>

        <!-- <input class="form-control" type="text" name="cat" id="cat" /> -->
      </section>
    </div>
    <button type="submit" class="btn btn-light">Create</button>
  </form>
  <script src="/js/create-product.js"></script>
  <footer>
    <button type="button" class="btn btn-light">
      <a href="/products">All Products</a>
    </button>

  </footer>
</body>

</html>