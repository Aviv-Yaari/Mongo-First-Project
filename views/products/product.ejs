<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="preconnect" href="https://fonts.gstatic.com" />
  <link
    href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
    rel="stylesheet" />
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/general.css">
  <link rel="stylesheet" href="/css/product.css" />
  <title>Product</title>
</head>

<body>
  <header class="mb-5">
    <h1 class="bg-light" productId="<%- product.id %>">
      <%- product.name %>
    </h1>
    <button id="edit" type="button" class="btn btn-light">
      <span class="icon icon-edit material-icons-outlined"> edit </span>
    </button>

    <button id="delete" type="button" class="btn btn-light">
      <span class="icon icon-delete material-icons-outlined"> delete </span>
    </button>
  </header>

  <form class="form-update" method="POST" action="/products/<%- product.id %>?_method=PATCH">
    <div class="container flex-justify-content-center flex-column" style="width: 25%; text-align: start;">
      <section>
        <label for="price">Price:</label>
        <div>
          <input readonly required class="editable form-control" type="number" name="price" id="price"
            value="<%- product.price %>" />
        </div>
      </section>
      <section>
        <label for="category">Category:</label>
        <div>
          <input readonly class="editable form-control category" type="text" value="<%- product.category %>" />
          <select hidden class="editable form-select category" name="category" aria-label="Default select example">

            <option selected value="<%- product.category %>">
              <%- product.category %>
            </option>
            <% for (const category of categories) { %>
              <option value="<%- category %>">
                <%- category %>
              </option>
              <% } %>
          </select>
        </div>
      </section>
      <section>
        <button hidden type="submit" class="editable btn btn-light mt-2">Confirm</button>
      </section>
    </div>
  </form>

  <footer class="mt-5">
    <button type="button" class="btn btn-light">
      <a href="/products">All Products</a>
    </button>
  </footer>
  <script src="/js/product.js"></script>
</body>

</html>