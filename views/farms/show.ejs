<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
        href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
        rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/general.css">
    <title>Farm</title>
</head>

<body>
    <header class="mb-5">
        <h1 class="bg-light">
            <%- farm.name %>
        </h1>
        <button id="edit" type="button" class="btn btn-light">
            <span class="icon icon-edit material-icons-outlined"> edit </span>
        </button>

        <button id="delete" type="button" class="btn btn-light">
            <span class="icon icon-delete material-icons-outlined"> delete </span>
        </button>
    </header>

    <!-- <form class="form-update" method="POST" action="/farms/<%- farm.id %>?_method=PATCH"> -->
    <div class="container flex-justify-content-center flex-column" style="width: 25%; text-align: start;">
        <section>
            <label for="location">Location:</label>
            <div>
                <input readonly required class="editable form-control" type="text" name="location" id="location"
                    value="<%- farm.location %>" />
            </div>
        </section>

        <section>
            <label>Products:</label>
            <div class="list-group">
                <% for (const product of farm.products) { %>

                    <% if(product.item) { %>
                        <a href="#" class="list-group-item list-group-item-action">
                            <%- product.item.name %>
                                <span class="badge bg-primary rounded-pill">
                                    <%- product.amount %>
                                </span>
                        </a>

                        <% } }%>
            </div>
        </section>
        <section>
            <form action="/farms/<%- farm.id %>" method="POST">
                <label>Add Product:</label>
                <div class="row">
                    <div class="col-5">
                        <input name="prodName" type="text" class="form-control" placeholder="Product name"
                            aria-label="Product name">
                    </div>
                    <div class="col-4">
                        <input name="prodQty" type="number" min="1" class="form-control" placeholder="quantity"
                            aria-label="quantity">
                    </div>
                    <div class="col-1">
                        <button class="btn btn-light">Add</button>
                    </div>
                </div>
            </form>
        </section>
        <section>
            <button hidden type="submit" class="editable btn btn-light mt-2">Confirm</button>
        </section>
    </div>
    <!-- </form> -->

    <footer class="mt-5">
        <button type="button" class="btn btn-light">
            <a href="/farms">All Farms</a>
        </button>
    </footer>
</body>

</html>